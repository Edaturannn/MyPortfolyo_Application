@model Portfolio
@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/Shared/_Admins.cshtml";
}

<h1 style="text-align:center;">New Add</h1>
<form method="post">
    <label>Title</label>
    <input type="text" asp-for="Title" class="form-control" autocomplete="off" />
    <br />

    <label>SubTitle</label>
    <input type="text" asp-for="SubTitle" class="form-control" autocomplete="off" />
    <br />

    <label>Image Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" autocomplete="off" />
    <br />

    <label>Url</label>
    <input type="text" asp-for="Url" class="form-control" autocomplete="off" />
    <br />

    <label>Description</label>
    <textarea asp-for="Description" class="form-control" autocomplete="off" rows="5"></textarea>
    <br />
    
    <button class="btn btn-info">Create</button>
</form>

