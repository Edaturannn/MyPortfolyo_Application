@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admins.cshtml";
    int count = 0;
}

<div>
    <h1 style="text-align:center;">Portfolio</h1>

    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>SubTitle</th>
            <th>ImageUrl</th>
            <th>Url</th>
            <th>Description</th>

            <th>Update</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td>@item.ImageUrl</td>
                <td>@item.Url</td>
                <td>@item.Description</td>
                

                <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-outline-warning">Update</a></td>
                <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Portfolio/CreatePortfolio" class="btn btn-outline-info">Add</a>
</div>








