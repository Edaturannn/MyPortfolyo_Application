@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admins.cshtml";
    int count = 0;
}

<div>
    <h1 style="text-align:center;">Testimonial</h1>

    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Name Surname</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image Url</th>

            <th>Update</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.NameSurname</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.ImageUrl</td>

                <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-warning">Update</a></td>
                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Testimonial/CreateTestimonial" class="btn btn-outline-info">Add</a>
</div>


