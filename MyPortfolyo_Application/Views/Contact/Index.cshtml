@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admins.cshtml";
    int count = 0;
}

<div>
    <h1 style="text-align:center;">Contact</h1>

    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Phone1</th>
            <th>Phone2</th>
            <th>Email1</th>
            <th>Email2</th>
            <th>Address</th>

            <th>Update</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Phone1</td>
                <td>@item.Phone2</td>
                <td>@item.Email1</td>
                <td>@item.Email2</td>
                <td>@item.Address</td>

                <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-warning">Update</a></td>
                <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Contact/CreateContact" class="btn btn-outline-info">Add</a>
</div>






