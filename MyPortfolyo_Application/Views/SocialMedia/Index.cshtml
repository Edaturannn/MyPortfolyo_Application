@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admins.cshtml";
    int count = 0;
}

<div>
    <h1 style="text-align:center;">Social Media</h1>

    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Url</th>
            <th>Icon</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.Url</td>
                <td>@item.Icon</td>

                <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-warning">Update</a></td>
                <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/SocialMedia/CreateSocialMedia" class="btn btn-outline-info">Add</a>
</div>






